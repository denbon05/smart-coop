{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/"
  ],
  "exclude": [
    "__tests__/**/*",
    "node_modules/**/*"
  ],
  "compilerOptions": {
    "module": "ES2020",
    "composite": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@abi/*": [
        "./src/artifacts/contracts/*"
      ]
    }
  }
}